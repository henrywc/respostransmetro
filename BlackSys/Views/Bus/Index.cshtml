
@{
    ViewBag.Title = "Buses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Buses</h2>

<p>
    @Html.ActionLink("Crear nuevo bus", "Create",  null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Código Bus
        </th>
        <th>
            Bus
        </th>
        <th>
            Línea
        </th>
        <th>
            Estación
        </th>
        <th>
            Pasajeros
        </th>
        <th>
            Parqueo
        </th>
        <th>
            Piloto
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var lista in ViewBag.Buses) {
<tr>
    <td>
        Transmetro @lista.idbus
    </td>
    <td>
        @lista.nombre_bus
    </td>
    <td>
        @lista.nombre_linea
    </td>
    <td>
        @lista.nombre_estacion
    </td>
    <td>
        @lista.capacidad
    </td>
    <td>
        @lista.nombre_parqueo
    </td>
    <td>
        @lista.nombre_piloto
    </td>
    <td>
        @Html.ActionLink("Detalles", "Details", new { id = lista.idbus, }, new { @class = "btn btn-default" }) |
        @Html.ActionLink("Editar", "Edit", new { id = lista.idbus, }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = lista.idbus, }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>

