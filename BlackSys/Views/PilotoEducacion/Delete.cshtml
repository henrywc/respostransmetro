@model BlackSys.Models.Modelos_transmetro.ConsultarPilotoEducacion

@{
    ViewBag.Title = "Eliminar Educación Piloto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>Está seguro que desea eliminarlo?</h3>
<div>
    <h4>Eliminar Educación Piloto</h4>
    <hr />
    @foreach (var lista in ViewBag.PilotosEducacion)
    {

        <dl class="dl-horizontal">
            <dt>
                Nombre:
            </dt>

            <dd>
                @lista.nombre_piloto
            </dd>

            <dt>
                Último nivel cursado:
            </dt>

            <dd>
                @lista.nivelcursado
            </dd>

            <dt>
                Año último nivel cursado:
            </dt>

            <dd>
                @lista.fechanivelcursado
            </dd>

            <dt>
                Centro Educativo:
            </dt>

            <dd>
                @lista.centroeducativo
            </dd>

        </dl>

    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a href="/PilotoEducacion/Index" class="btn btn-primary">Regresar al Listado</a>
        </div>
    }
</div>
