@model IEnumerable<BlackSys.Models.MunicipalidadModel>

@{
    ViewBag.Title = "Municipalidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Municipalidades</h2>

<p>
    @Html.ActionLink("Crear nueva Municipalidad", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre_municipalidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_municipalidad)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.idmunicipalidad, }, new { @class = "btn btn-default" } ) |
            @Html.ActionLink("Editar", "Edit", new { id = item.idmunicipalidad, }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idmunicipalidad, }, new { @class = "btn btn-danger" } )
        </td>
    </tr>
}

</table>
