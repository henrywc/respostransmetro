@model BlackSys.Models.MunicipalidadModel

@{
    ViewBag.Title = "Editar Municipalidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Municipalidad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Municipalidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idmunicipalidad)

        <div class="form-group">
            @Html.LabelFor(model => model.nombre_municipalidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre_municipalidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre_municipalidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a Listado", "Index", null, new { @class = "btn btn-primary" })
</div>
