@model BlackSys.Models.Modelos_transmetro.ConsultarLinea

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Detalles de Linea</h4>
    <hr />
    @foreach (var lista in ViewBag.Lineas)
    {
<dl class="dl-horizontal">
    <div class="card-body text-center">

        <h4>Línea: @lista.nombre_linea</h4>
        <h4>Municipalidad: @lista.nombre_municipalidad</h4>
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = lista.idlinea, }, new { @class = "btn btn-warning" }) |
            <a href="/Linea/Index" class="btn btn-primary">Regresar al Listado</a>
        </p>


    </div>


</dl>
